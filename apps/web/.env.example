# GlobeTrotter Environment Variables
# Copy this file to .env.local and fill in your values

# ===========================================
# DATABASE
# ===========================================
# For local development (SQLite)
DATABASE_URL="file:./dev.db"

# For production (PostgreSQL)
# DATABASE_URL="postgresql://user:password@host:5432/globetrotter?schema=public"

# ===========================================
# AUTHENTICATION
# ===========================================
# JWT secret - generate a strong random string (min 32 chars)
# You can generate one using: openssl rand -base64 32
JWT_SECRET="your-super-secret-jwt-key-at-least-32-characters-long"

# Session duration in seconds (default: 7 days)
SESSION_DURATION="604800"

# ===========================================
# EXTERNAL APIs (Free Tiers Available)
# ===========================================

# OpenWeatherMap API (Free: 1000 calls/day)
# Get your key at: https://openweathermap.org/api
OPENWEATHER_API_KEY="your-openweathermap-api-key"

# Google Maps API (Optional - for enhanced mapping)
# Get your key at: https://console.cloud.google.com/google/maps-apis
GOOGLE_MAPS_API_KEY="your-google-maps-api-key"

# Mapbox API (Alternative to Google Maps - Free: 50,000 loads/month)
# Get your key at: https://www.mapbox.com/
MAPBOX_ACCESS_TOKEN="your-mapbox-access-token"

# ===========================================
# APP CONFIGURATION
# ===========================================
# App URL (used for OAuth callbacks, emails, etc.)
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_API_URL="http://localhost:3000/api"
NEXT_PUBLIC_SITE_NAME="GlobeTrotter"

# Environment
NODE_ENV="development"

# ===========================================
# FEATURE FLAGS
# ===========================================
NEXT_PUBLIC_ENABLE_PWA="true"
NEXT_PUBLIC_ENABLE_ANALYTICS="false"
NEXT_PUBLIC_ENABLE_AI_ASSISTANT="true"
NEXT_PUBLIC_ENABLE_AI="true"
NEXT_PUBLIC_ENABLE_SOCIAL="true"

# ===========================================
# OPTIONAL: Email Service
# ===========================================
# Resend (Free: 3000 emails/month)
# Get your key at: https://resend.com/
RESEND_API_KEY="your-resend-api-key"

# ===========================================
# OPTIONAL: File Storage
# ===========================================
# Cloudinary (Free: 25GB storage)
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# ===========================================
# OPTIONAL: Push Notifications (VAPID Keys)
# ===========================================
NEXT_PUBLIC_VAPID_PUBLIC_KEY="your-public-vapid-key"
VAPID_PRIVATE_KEY="your-private-vapid-key"

# ===========================================
# OPTIONAL: Analytics
# ===========================================
NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"
